
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /berita/{id} { allow read: if resource.data.published == true; allow write: if request.auth != null; }
    match /umkm/{id}   { allow read: if resource.data.publik == true;   allow write: if request.auth != null; }
    match /kegiatan/{id}{ allow read: if resource.data.publik == true;   allow write: if request.auth != null; }
    match /{collection}/{docId} { allow read, write: if request.auth != null; }
  }
}
